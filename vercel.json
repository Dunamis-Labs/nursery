{
  "buildCommand": "NEXT_PRIVATE_SKIP_LIGHTNINGCSS=1 npm run build",
  "outputDirectory": "apps/web/.next",
  "installCommand": "npm ci --omit=optional && npm run db:generate --workspace=@nursery/db && npm install --no-save --workspace=@nursery/web --platform=linux --arch=x64 lightningcss lightningcss-linux-x64-gnu || true",
  "framework": "nextjs",
  "crons": [
    {
      "path": "/api/cron/daily-optimization",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cron/weekly-analysis",
      "schedule": "0 3 * * 1"
    },
    {
      "path": "/api/cron/content-refresh",
      "schedule": "0 4 * * *"
    },
    {
      "path": "/api/cron/experiment-monitoring",
      "schedule": "*/30 * * * *"
    }
  ]
}

